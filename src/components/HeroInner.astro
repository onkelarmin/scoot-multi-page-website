---
// Component imports
import Picture from "./Picture.astro"

type Props = {
  title: string
  imgDesktop: ImageMetadata
  imgTablet: ImageMetadata
  imgMobile: ImageMetadata
}

const { title, imgDesktop, imgTablet, imgMobile } = Astro.props
---

<section aria-labelledby="page-title">
  <div class="background-image">
    <Picture
      imageDesktop={imgDesktop}
      imageTablet={imgTablet}
      imageMobile={imgMobile}
      altText=""
    />
  </div>
  <div class="content container">
    <h1 id="page-title" class="heading-1">{title}</h1>
  </div>
</section>

<style lang="scss">
  @use "../sass/abstracts" as *;

  section {
    display: grid;
    grid-template-areas: "stack";
    place-items: center;
    position: relative;
    overflow-x: clip;

    > * {
      grid-area: stack;
    }

    &::after {
      @include mq(medium) {
        content: url("../assets/patterns/white-circles.svg");
        position: absolute;
        top: 50%;
        right: 0;
        transform: translate(15%, -50%);
      }
    }

    .background-image {
      width: 100%;
      height: 100%;
      max-height: 10rem;
      background-color: $color-neutral-700;

      @include mq(medium) {
        max-height: 12.5rem;
      }
    }

    .content {
      text-align: center;
      padding-block: 3.75rem;

      @include mq(medium) {
        text-align: start;
        padding-block: 4.5rem;
      }
    }
  }
</style>
