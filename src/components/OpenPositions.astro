import OpenPosition from "./OpenPosition.astro"
---

<section aria-label="Available Positions">
  <div class="container">
    <ul>
      <OpenPosition title="General Manager" location="Jakarta, Indonesia" />
      <OpenPosition title="UI/UX Designer" location="Yokohama, Japan" />
      <OpenPosition
        title="Blog Content Copywriter"
        location="New York, United States"
      />
