<style lang="scss">
  @use "../sass/abstracts" as *;

  section {
    margin-block-start: 9rem;
    margin-block-end: 7.5rem;

    @include mq(medium) {
      margin-block-start: 7.5rem;
    }

    @include mq(large) {
      margin-block-end: 10rem;
    }

    ul {
      display: grid;
      gap: 1rem;
      list-style: none;

      @include mq(large) {
        gap: 1.5rem;
      }
    }
  }
</style>
