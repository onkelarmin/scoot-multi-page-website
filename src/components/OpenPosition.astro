---
// Component imports
import Button from "./Button.astro"

type Props = {
  title: string
  location: string
}

const { title, location } = Astro.props
---

<li>
  <h3 class="heading-4">{title}</h3>
  <p class="clr-neutral-700">{location}</p>
  <Button>Apply</Button>
</li>

<style lang="scss">
  @use "../sass/abstracts" as *;

  li {
    display: grid;
    background-color: $color-neutral-200;
    text-align: center;
    padding: 2.25rem 2rem 2rem 2rem;

    p {
      margin-block: 0.25rem 1rem;
    }

    @include mq(medium) {
      grid-template-columns: 1fr 180px;
      grid-auto-flow: dense;
      text-align: start;
      padding: 2.125rem 3rem;

      > * {
        grid-row: span 2;
      }

      h3 {
        grid-row: span 1;
      }

      p {
        grid-row: span 1;
        grid-column: 1 / span 1;
        margin-block-start: 0.5rem;
        margin-block-end: 0;
      }
    }

    @include mq(large) {
      padding: 2rem 4rem 2.125rem 2.5rem;
    }
  }
</style>
