---
// Component imports
import Button from "./Button.astro"
import Picture from "./Picture.astro"

// Image imports
import bgDesktop from "../assets/images/home-hero-desktop.jpg"
import bgTablet from "../assets/images/home-hero-tablet.jpg"
import bgMobile from "../assets/images/home-hero-mobile.jpg"
---

<section aria-labelledby="hero-title">
  <div class="background-image">
    <Picture
      imageDesktop={bgDesktop}
      imageTablet={bgTablet}
      imageMobile={bgMobile}
      altText=""
    />
  </div>
  <div class="container">
    <div class="content">
      <h1 id="hero-title" class="heading-1">Scooter sharing made simple</h1>
      <div class="offset-large-screens">
        <p>
          Scoot takes the hassle out of urban mobility. Our bikes are placed in
          convenient locations in each of our cities. Use our app to locate the
          nearest bike, unlock it with a tap, and youâ€™re away!
        </p>
        <Button>Get scootin</Button>
        <div class="line"></div>
        <div class="arrow"></div>
        <div class="circles"></div>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  @use "../sass/abstracts" as *;

  section {
    display: grid;
    grid-template-areas: "stack";
    place-items: center;
    overflow-x: clip;

    > * {
      grid-area: stack;
    }

    .background-image {
      width: 100%;
      height: 100%;
      max-height: 40.625rem;
      background-color: $color-neutral-700;
    }

    .content {
      position: relative;
      max-width: 55ch;
      text-align: center;
      margin-inline: auto;
      padding-block: 7.25rem 11.25rem;

      @include mq(medium) {
        padding-block: 8.5rem 13.5rem;
      }

      @include mq(large) {
        text-align: start;
        margin-inline: 0;
        padding-block: 9.5rem;
      }
    }

    .offset-large-screens {
      @include mq(large) {
        padding-inline-start: 6rem;
      }
    }

    p {
      color: $color-neutral-000;
      margin-block: 1.5rem 2rem;

      @include mq(large) {
        margin-block: 2.5rem;
      }
    }

    // Decorative elements
    .arrow {
      position: absolute;
      width: 452px;
      height: 151px;
      background-image: url("../assets/patterns/right-arrow.svg");
      background-repeat: no-repeat;
      top: 71%;
      right: 66%;

      &::after {
        content: url("../assets/patterns/white-circles.svg");
        position: absolute;
        bottom: 6px;
        right: -245px;
        transform: translateX(100%);
      }

      @include mq(medium) {
        right: 59%;

        &::after {
          right: -235px;
        }
      }

      @include mq(large) {
        top: 52%;
        right: -40px;
        transform: translateX(100%);

        &::after {
          right: -102px;
        }
      }
    }

    .line {
      @include mq(large) {
        position: absolute;
        width: 609px;
        height: 15px;
        background-color: $color-brand-400;
        left: 38px;
        top: 52%;
        transform: translateX(-100%);
      }
    }
  }
</style>
